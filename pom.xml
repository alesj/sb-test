<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>org.jboss.obsidian</groupId>
    <artifactId>sb-test</artifactId>
    <version>1.0.0-SNAPSHOT</version>
    <packaging>pom</packaging>

    <name>SB test</name>
    <description>Test project for Spring Boot</description>

    <properties>
        <springboot.version>1.4.2.RELEASE</springboot.version>
        <tomcat.version>8.0.36</tomcat.version>
        <keycloak.version>1.9.8.Final</keycloak.version>
        <keycloak-quickstarts.version>3.0.0.CR1-SNAPSHOT</keycloak-quickstarts.version>
        <fabric8.maven.plugin.version>3.1.92</fabric8.maven.plugin.version>
        <maven-surefire-plugin.version>2.18.1</maven-surefire-plugin.version>
    </properties>

    <modules>
        <module>app</module>
        <module>service</module>
        <module>sso</module>
    </modules>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>org.jboss.obsidian</groupId>
                <artifactId>sb-test-app</artifactId>
                <version>${project.version}</version>
            </dependency>

            <dependency>
                <groupId>org.jboss.obsidian</groupId>
                <artifactId>sb-test-service</artifactId>
                <version>${project.version}</version>
            </dependency>

            <dependency>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-starter-parent</artifactId>
                <version>${springboot.version}</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>

            <dependency>
                <groupId>org.keycloak.quickstarts</groupId>
                <artifactId>app-springboot</artifactId>
                <version>${keycloak-quickstarts.version}</version>
            </dependency>

            <dependency>
                <groupId>org.keycloak.quickstarts</groupId>
                <artifactId>service-springboot</artifactId>
                <version>${keycloak-quickstarts.version}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.springframework.boot</groupId>
                    <artifactId>spring-boot-maven-plugin</artifactId>
                    <version>${springboot.version}</version>
                </plugin>

                <plugin>
                    <groupId>io.fabric8</groupId>
                    <artifactId>fabric8-maven-plugin</artifactId>
                    <version>${fabric8.maven.plugin.version}</version>
                </plugin>

                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-surefire-plugin</artifactId>
                    <version>${maven-surefire-plugin.version}</version>
                    <configuration>
                        <skipTests>true</skipTests>
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>

</project>
